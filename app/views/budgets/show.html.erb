<p id="notice"><%= notice %></p>

<p>
  <strong>Category:</strong>
  <%= @budget.category %>
</p>

<p>
  <strong>Member:</strong>
  <%= @budget.member.user.name %>
</p>

<p>
  <strong>Cap:</strong>
  $ <%= @budget.cap %>
</p>

<p>
  <strong>Total spent so far:</strong>
  $ <%= @budget.spent %>
</p>

<p>
  <strong>Progress:</strong>
  <%= @budget.progress %>
</p>

<p>
  <strong>Time frame:</strong>
  <%= @budget.time_frame_display %>
</p>

<br>

<h4>Expenses</h4>
<table class="table">
<tr>
<th scope="col">Name</th>
<th scope="col">Cost</th>
<th scope="col">Approved?</th>
<th scope="col"></th>
<th scope="col"></th>
<th scope="col"></th>
</tr>
<tbody>
<% @budget.expenses.each do |expense| %>
  <tr>
    <td><%= expense.name %></td>
    <td><%= expense.cost %></td>
    <td><%= expense.approved ? 'Yes' : 'No' %></td>
    <td><%= link_to 'Show', expense %></td>
    <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
    <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
</table>
<br>
<%= link_to 'Add New Expense', new_expense_path(budget: @budget.id) %> |
<% if current_user.is_a_parent? %>
<%= link_to 'Edit', edit_budget_path(@budget) %> |
<% end %>
<%= link_to 'Back', @budget.member %>
